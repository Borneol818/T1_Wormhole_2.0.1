    @*amy新增，之後請負責人放至適合位置*@
    <button @@click="ArticleEdit" class="button button-contactForm btn_1 py-2 my-3">修改</button>

    @* 先新增要驗證修改 *@
    @* 文章圖片 *@
    <img v-if="articles && articles.articleID" :src="'/api/ArticlesApi/GetPicture/' + articles.articleID" />
    @* 文章圖片 *@
    <p>{{articles.content}}</p>
    <div class="comments-area">
        <div class="comment-list">
            <button type="button" v-on:click="submitRating(true)" class="btn-like">喜歡: ({{ ratingcount.positive }})</button>
            <button type="button" v-on:click="submitRating(false)" class="btn-dislike">不喜歡: ({{ ratingcount.negative }})</button>
        </div>
        <div>
            <div class="single-comment justify-content-between d-flex">
                <div class="user justify-content-between d-flex" v-for="Response in comments">
                    <div class="thumb">
                        <img src="assets/img/blog/comment_1.png" alt="">
                    </div>
                    <div class="desc">
                        <p class="comment">
                            {{ Response.content }}
                        </p>
                        <div class="d-flex justify-content-between">
                            <div class="d-flex align-items-center">
                                <h5>
                                    <a href="#">{{ Response.writer }}</a>
                                </h5>
                                <p class="date">時間{{ Response.date }}</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <textarea v-model="textResponse" placeholder="輸入留言"></textarea>
            <div class="reply-btn">
                <button class="btn-reply text-uppercase">reply</button>
            </div>
        </div>

    </div>
</div>

<script>


    Vue.createApp({
        data(){
            return {
                comments:[],
                articles:[],
                ratingcount: {
                positive: 0,
                negative: 0,
                currentArticleID:0,
                }
            }
        },
        methods:{

            Comments(id){
                    fetch('/api/Comments/GetByArticleId'+'?articleId='+id)
                    .then(response => response.json())
                    .then(data => {
                        this.comments = data;
                    })
            },

            getArticles(id) {
            //let self = this;
            fetch('/api/ArticlesApi')
            .then(x => x.json())
            .then(res => {
                console.log(res);
                this.articles = res.find(x => x.articleID == id);;
            })


            //alert(self.articles);
                //self.articles = res.find(x=>x.articleID==parseInt(id)))
        },

        //取得好負評數量
            getRatingcount(id){
                fetch('/api/Comments/GetRating?articleid='+id)
                .then(r => r.json())
                .then(data => {
                //console.log( data);
                    this.ratingcount=data;
                })
            },
            //取得好負評數量
            //處理好負評的點擊
            submitRating(isPositive) {
                console.log("目前文章ID:", this.id);
                fetch('/api/Comments/SubmitRating', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        articleId: this.id,
                        isPositive: isPositive // true 表示喜歡，false 表示不喜歡
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.getRatingcount(id); // 更新網頁上的數字
                    } else {
                        alert('提交評價失敗');
                    }
                })
                .catch(error => {
                    console.error('提交評價錯誤:', error);
                    alert('提交評價時發生錯誤');
                });
            },
            //amy新增
            /*--------------進行文章編輯--------------*/
            ArticleEdit(){
                let self=this;
            localStorage.setItem("EditArticleId",self.currentArticleID);
                fetch('/NewsArticle/newsPoster' , {
                        method: 'GET'
                        }).then(() => {window.location.href="/NewsArticle/newsPoster";})
            },
			/*--------------進行文章編輯--------------*/
            loadRating(id) {
                fetch('/api/Comments/GetRating?articleId='+id)
                    .then(response => response.json())
                    .then(data => {
                        this.positive = data.positive;
                        this.negative = data.negative;
                    });
            },
        },
        mounted() {

            // 修改抓取文章id方式
            let urlParams = new URLSearchParams(window.location.search);
            var id=urlParams.get('id') ;
            // 修改抓取文章id方式
            //alert(articleId[1]);

            this.Comments(id);
            this.getRatingcount(id);
            this.getArticles(id);
            this.currentArticleID=id;
            //test https://localhost:7253/api/comments/GetByArticleId?articleId=1
            this.loadRating(id);
        }

    }).mount('#app')
</script>

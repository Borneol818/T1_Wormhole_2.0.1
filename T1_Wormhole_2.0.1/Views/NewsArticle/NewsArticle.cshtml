<div id="app">
    <h1>{{articles.title}}</h1>

    <p>{{articles.content}}</p>
    <img :src=`/api/ArticlesApi/GetArticles?id =${articles.ArticleID}` />
    <div class="comments-area">
        <div class="comment-list">
            <p>喜歡:{{ ratingcount.positive }}</p>

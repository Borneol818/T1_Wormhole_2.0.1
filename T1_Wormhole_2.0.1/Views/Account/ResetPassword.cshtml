<body>
    <!-- header end -->
    <main class="login-bg">
        <!-- Register Area Start -->
        <div class="register-form-area">
            <div class="register-form text-center">
                <!-- Login Heading -->
                <div class="register-heading">
                    <span>Forget your password</span>
                    <p>Set up your new password now!</p>
                </div>
                <form action="/Account/ResetPassword" method="post">
                    <!-- Single Input Fields -->
                    <div class="input-box">
                        <div class="single-input-fields">
                            <label>Password</label>
                            <input type="password" name="Password" placeholder="Enter Password" style="margin-bottom: 10px;" minlength="8" maxlength="20">
                        </div>
                    </div>
                    <div class="input-box" style="margin-bottom: 50px;">
                        <div class="single-input-fields">
                            <label>Comfirm your Password</label>
                            <input type="password" name="ConfirmPassword" placeholder="Enter Password Again" style="margin-bottom: 10px;" minlength="8" maxlength="20">
                        </div>
                    </div>
                    <!-- form Footer -->
                    <div class="register-footer" style="margin-bottom: 20px;">
                        <button class="submit-btn3" style="padding: 0px 20px; height: 40px;">Reset Your Password</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- Register Area End -->
    </main>
</body>




<body>

    <main class="login-bg" style="height: 140vh;">
        <!-- login Area Start -->
        <div class="login-form-area" id="app">
            <form action="/Account/Login" method="post">
                <div class="login-form">
                    <!-- Login Heading -->
                    <div class="login-heading">
                        <span>Login</span>
                        <p>Enter Login details to get access</p>
                    </div>
                    <!-- Single Input Fields -->
                    <div class="input-box">

                        <div class="single-input-fields">
                            <label>Username or Email Address</label>
                            <input type="text" v-model="UserIdentifier" name="UserIdentifier" placeholder="Username or Email address">
                        </div>
                        <div class="single-input-fields">
                            <label>Password</label>
                            <input type="password" v-model="Password" name="Password" placeholder="Enter Password">
                        </div>
                        <div class="single-input-fields login-check">
                            <a href="/Account/ForgotPassword" style="margin-bottom: 20px">Forgot Password?</a> @* 修改連結內容 *@
                        </div>
                        <div class="single-input-fields">
                            <label>Login with</label>
                            <button href="#" style="width: 100%; height: 50px; background-color: #FF1616; margin-bottom: 5px; border: 0px;">Google</button>
                            <button href="#" style="width: 100%; height: 50px; background-color: #FF1616; margin-bottom: 5px; border: 0px;">Facebook</button>
                        </div>
                        <div class="single-input-fields login-check" style="margin-top: 20px;">
                            <input type="checkbox" id="KeepLog" name="KeepLog">
                            <label for="KeepLog">Keep me logged in</label>
                        </div>
                        <div class="single-input-fields login-check" style="margin-top: 20px;">
                            <input type="checkbox" id="RememberMe" name="RememberMe">
                            <label for="RememberMe">Remember Me</label>
                        </div>
                    </div>
                    <!-- form Footer -->
                    <div class="login-footer">
                        <p>Don’t have an account? <a href="/Account/Register">Sign Up</a>  here</p> @* 修改連結內容 *@
                        <button class="submit-btn3" type="submit">Login</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- login Area End -->
    </main>


</body>
<script>
     Vue.createApp({
        data() {
            return {
                    UserIdentifier: "",
                    Password:""
            };
        },
        methods: {
            GetAccount(){
                let self = this;
                fetch("/api/AccountApi/GetLoginName")
                .then(response => response.text())
                .then(data => {
                    self.UserIdentifier = data;
                })
                .catch(error => {
                    console.log('Error in Getting Account Info', error);
                });
            },
            GetPassword(){
                let self = this;
                fetch("/api/AccountApi/GetPassword")
                .then(response => response.text())
                .then(data => {
                    self.Password = data;
                })
                .catch(error => {
                    console.log('Error in Getting Password', error);
                });
            }
        },
        computed:{

        },
        mounted() {
            this.GetAccount();
            this.GetPassword();
        }
    }).mount("#app")
</script>
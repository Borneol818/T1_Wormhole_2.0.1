

<body>

    <main class="login-bg" style="height: 140vh;">
        <!-- login Area Start -->
        <div class="login-form-area" id="app">
            <form action="/Account/Login" method="post">
                <div class="login-form">
                    <!-- Login Heading -->
                    <div class="login-heading">
                        <span>Login</span>
                        <p>Enter Login details to get access</p>
                    </div>
                    <!-- Single Input Fields -->
                    <div class="input-box">

                        <div class="single-input-fields" style="overflow: hidden;">
                            <label>Account or Email Address</label>
                            <input type="text" v-model="UserIdentifier" name="UserIdentifier" @@input="checkIdentifier" placeholder="Username or Email address" minlength="4">
                            <label v-show="isEmptyUserIdentifier" style="float:left; color: red; font-size: 12px; margin-bottom: 20px;">This field is required</label>
                        </div>
                        <div class="single-input-fields" style="overflow: hidden;">
                            <label>Password</label>
                            <input type="password" v-model="Password" name="Password" @@input="checkPassword" placeholder="Enter Password" minlength="8" maxlength="20">
                            <label v-show="isEmptyPassword" style="float:left; color: red; font-size: 12px; margin-bottom: 20px;">This field is required</label>
                        </div>
                        <div class="single-input-fields login-check">
                            <a href="/Account/ForgotPassword" style="margin-bottom: 20px">Forgot Password?</a> @* 修改連結內容 *@
                        </div>
                        <div class="single-input-fields login-check" style="margin-top: 20px;">
                            <input type="checkbox" id="KeepLog" name="KeepLog">
                            <label for="KeepLog">Keep me logged in</label>
                        </div>
                        <div class="single-input-fields login-check" style="margin-top: 20px;">
                            <input type="checkbox" id="RememberMe" name="RememberMe">
                            <label for="RememberMe">Remember Me</label>
                        </div>
                        <div class="single-input-fields login-check" style="margin-top: 20px;">
                            <label>Login with</label>
                        </div>
                        <div id="g_id_onload"
                             data-client_id="775349593232-348s21pflg84e22t1j34h9kqtl5hfvgb.apps.googleusercontent.com"
                             data-login_uri="https://localhost:7053/Account/ValidGoogleLogin"
                             data-auto_prompt="false">
                        </div>
                        <div class="g_id_signin"
                             data-type="standard"
                             data-size="large"
                             data-theme="outline"
                             data-text="sign_in_with"
                             data-shape="rectangular"
                             data-logo_alignment="left">
                        </div>
                    </div>
                    
                    <!-- form Footer -->
                    <div class="login-footer">
                        <p>Don’t have an account? <a href="/Account/Register">Sign Up</a>  here</p> @* 修改連結內容 *@
                        <button v-bind:disabled="!formIsValid" class="submit-btn3" type="submit">Login</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- login Area End -->
    </main>


</body>
<script src="https://accounts.google.com/gsi/client" async defer></script>
<script>
     Vue.createApp({
        data() {
            return {
                    UserIdentifier: "",
                    Password:"",
                    isEmptyUserIdentifier:true,
                    isEmptyPassword:true
            };
        },
        methods: {
            GetAccount(){
                let self = this;
                fetch("/api/AccountApi/GetLoginName")
                .then(response => response.text())
                .then(data => {
                    self.UserIdentifier = data;
                })
                .catch(error => {
                    console.log('Error in Getting Account Info', error);
                });
            },
            GetPassword(){
                let self = this;
                fetch("/api/AccountApi/GetPassword")
                .then(response => response.text())
                .then(data => {
                    self.Password = data;
                })
                .catch(error => {
                    console.log('Error in Getting Password', error);
                });
            },
            checkIdentifier(){
                let self = this;
                if(self.UserIdentifier == ""){
                    self.isEmptyUserIdentifier = true;
                    return
                }
                else{
                    self.isEmptyUserIdentifier = false;
                }
            },
            checkPassword(){
                let self = this;
                if(self.Password == ""){
                    self.isEmptyPassword = true;
                    return
                }
                else{
                    self.isEmptyPassword = false;
                }
            }
        },
        computed:{
            formIsValid() {
                let self = this;
                return !self.isEmptyUserIdentifier && !self.isEmptyPassword;
            }
        },
        mounted() {
            this.GetAccount();
            this.GetPassword();
        },
    }).mount("#app")
</script>
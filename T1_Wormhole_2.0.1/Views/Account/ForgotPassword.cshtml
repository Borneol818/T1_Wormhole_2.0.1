<body>
    <!-- header end -->
    <main class="login-bg">
        <!-- Register Area Start -->
        <div class="register-form-area">
            <div class="register-form text-center" id="app">
                <!-- Login Heading -->
                <div class="register-heading">
                    <span>Forget your password</span>
                    <p>Enter your email , reset password letter will be sent</p>
                </div>
                <form action="/Account/ForgotPassword" method="post">
                    <!-- Single Input Fields -->
                    <div class="input-box" style="height: 200px;">
                        <div class="single-input-fields">
                            <label>Email</label>
                            <input type="text" name="Email" v-model="Email" @@input="checkEmail" placeholder="Enter Email Address" style="margin-bottom: 10px;">
                            <label v-show="isEmptyEmail" style="float:left; color: red; font-size: 12px; margin-bottom: 20px;">This field is required</label>
                            <label v-show="isEmailFormat" style="float:left; color: green; font-size: 12px; margin-bottom: 20px;">Valid Email Format</label>
                            <label v-show="isNotEmailFormat" style="float:left; color: red; font-size: 12px; margin-bottom: 20px;">Incorrect Email format</label>
                        </div>
                    </div>
                    <!-- form Footer -->
                    <div class="register-footer" style="margin-bottom: 20px; float:right;" >
                        <button v-bind:disabled="!formIsValid" class="submit-btn3" style="padding: 0px 20px; height: 40px;">Send Letter</button>
                    </div>
                </form>

            </div>
        </div>
        <!-- Register Area End -->
    </main>
</body>

<script>
     Vue.createApp({
        data() {
            return {
                    Email: "",
                    isEmptyEmail:true,
                    isNotEmailFormat:false,
                    isEmailFormat:false
            };
        },
        methods: {
            checkEmail(){
                let self = this;
                if (self.Email == "") {
                    self.isEmailFormat = false;
                    self.isNotEmailFormat = false;
                    self.isEmptyEmail = true;
                    return;
                }
                else{
                    let emailRule = /^\w+((-\w+)|(\.\w+))*\@@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z]+$/;
                    self.isEmailFormat = emailRule.test(self.Email);
                    self.isNotEmailFormat = !self.isEmailFormat;
                    self.isEmptyEmail = false;
                }
            },
        },
        computed:{
            formIsValid() {
                let self = this;
                return !self.isEmptyEmail && self.isEmailFormat;
            }
        },
        mounted() {

        },
    }).mount("#app")
</script>